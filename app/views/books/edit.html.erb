<strong>Editing Book</strong>


<% if @book.errors.any? %>
  <h4>errors happen</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>

<% end %>


<%= link_to "show", show_book_path(@book.id) %>
<a href = "/books">back</a>
